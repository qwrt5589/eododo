    <script>
        // åˆ›å»ºæ˜Ÿç©ºèƒŒæ™¯
        function createStars() {
            const starsContainer = document.getElementById('stars');
            const starsCount = 200;
            
            for (let i = 0; i < starsCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                
                // éšæœºä½ç½®
                const x = Math.random() * 100;
                const y = Math.random() * 100;
                
                // éšæœºå¤§å°
                const size = Math.random() * 3;
                
                // éšæœºåŠ¨ç”»å»¶è¿Ÿ
                const delay = Math.random() * 5;
                
                star.style.left = `${x}%`;
                star.style.top = `${y}%`;
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.animationDelay = `${delay}s`;
                
                starsContainer.appendChild(star);
            }
        }
        
        // éªŒè¯é“¾æ¥æ ¼å¼
        function isValidURL(string) {
            try {
                // å°è¯•åˆ›å»ºURLå¯¹è±¡
                new URL(string);
                return true;
            } catch (_) {
                return false;
            }
        }
        
        // è·å–DOMå…ƒç´ 
        const getKeyBtn = document.getElementById('getKeyBtn');
        const linkInput = document.getElementById('linkInput');
        const errorMessage = document.getElementById('errorMessage');
        const loadingContainer = document.getElementById('loadingContainer');
        const loadingText = document.getElementById('loadingText');
        const resultMessage = document.getElementById('resultMessage');
        
        // è·å–å¡å¯†æŒ‰é’®ç‚¹å‡»äº‹ä»¶
        getKeyBtn.addEventListener('click', function() {
            const link = linkInput.value.trim();
            
            // éªŒè¯è¾“å…¥æ˜¯å¦ä¸ºæœ‰æ•ˆé“¾æ¥
            if (!isValidURL(link)) {
                errorMessage.style.display = 'block';
                return;
            }
            
            // éšè—é”™è¯¯ä¿¡æ¯
            errorMessage.style.display = 'none';
            
            // ç¦ç”¨æŒ‰é’®
            getKeyBtn.disabled = true;
            
            // æ˜¾ç¤ºåŠ è½½åŠ¨ç”»
            loadingContainer.style.display = 'block';
            
            // éšæœºç­‰å¾…æ—¶é—´ 10-15ç§’
            const waitTime = Math.floor(Math.random() * 6) + 10; // 10-15ç§’
            
            // æ›´æ–°ç­‰å¾…æ–‡æœ¬
            loadingText.textContent = `è¯·ç­‰å¾…${waitTime}ç§’ï¼Œæ­£åœ¨è·å–å¡å¯†...`;
            
            // æ¨¡æ‹Ÿç­‰å¾…è¿‡ç¨‹
            setTimeout(function() {
                // éšè—åŠ è½½åŠ¨ç”»
                loadingContainer.style.display = 'none';
                
                // æ˜¾ç¤ºç»“æœ
                resultMessage.style.display = 'block';
                
                // é‡æ–°å¯ç”¨æŒ‰é’®
                getKeyBtn.disabled = false;
            }, waitTime * 1000);
        });
        
        // é¡µé¢åŠ è½½å®Œæˆååˆ›å»ºæ˜Ÿç©º
        window.addEventListener('load', createStars);
    </script>
